# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=schoolhub
DB_USER=postgres
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Google OAuth2 (Workspace SSO)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Service Ports
GATEWAY_PORT=3000
IDENTITY_SERVICE_PORT=3001
ACADEMIC_SERVICE_PORT=3002

# Service Hosts (use container names in Docker, localhost for local dev)
IDENTITY_SERVICE_HOST=localhost
ACADEMIC_SERVICE_HOST=localhost

# Database Sync (set to false in production)
DATABASE_SYNC=true
